#!/usr/bin/env bash
set -euo pipefail
export AI_BASH_SANDBOX="${AI_BASH_SANDBOX:-$PWD}"


# Load .env if present
if [ -f .env ]; then
  set -a
  . ./.env
  set +a
fi



# Run from project root so "src" is importable
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
cd "$PROJECT_ROOT"

python -m src.cli
